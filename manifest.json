{
    "name": "Doomscroll Blocker",
    "description": "Stops distraction by socialmedia platforms",
    "version": "1.3.2",
    "manifest_version": 3,
    "permissions": ["storage"],
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [ "<all_urls>" ],
            "js": ["constants.js", "blocker.js"],
            "css": ["blocker.css", "root.css"],
            "run_at": "document_start"
        }
    ],
    "options_page": "options.html"
}